{
    "name": "elementor-widget-manager",
    "displayName": "Elementor Widget Manager",
    "publisher": "pixelart",
    "description": "Manage Elementor widgets in your theme",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "elementor-manager",
                    "title": "Elementor Widgets",
                    "icon": "$(list-flat)"
                }
            ]
        },
        "views": {
            "elementor-manager": [
                {
                    "id": "elementorWidgets",
                    "name": "Widgets"
                }
            ]
        },
        "commands": [
            {
                "command": "elementor-widget-manager.refresh",
                "title": "Refresh Widgets",
                "icon": "$(refresh)"
            },
            {
                "command": "elementor-widget-manager.openWidget",
                "title": "Open Widget"
            },
            {
                "command": "elementor-widget-manager.createWidget",
                "title": "Create New Widget",
                "icon": "$(plus)"
            },
            {
                "command": "elementor-widget-manager.openDashboard",
                "title": "Open Elementor Dashboard",
                "category": "Elementor"
            },
            {
                "command": "elementor-widget-manager.addControl",
                "title": "Add Elementor Control",
                "category": "Elementor"
            },
            {
                "command": "elementor-widget-manager.openEiconBrowser",
                "title": "Browse Elementor Icons",
                "category": "Elementor"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "elementor-widget-manager.refresh",
                    "when": "view == elementorWidgets",
                    "group": "navigation"
                },
                {
                    "command": "elementor-widget-manager.createWidget",
                    "when": "view == elementorWidgets",
                    "group": "navigation"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "elementor-widget-manager.filePreview",
                "displayName": "File Preview",
                "selector": [
                    {
                        "filenamePattern": "*.svg"
                    },
                    {
                        "filenamePattern": "*.ttf"
                    },
                    {
                        "filenamePattern": "*.otf"
                    },
                    {
                        "filenamePattern": "*.woff"
                    },
                    {
                        "filenamePattern": "*.woff2"
                    }
                ],
                "priority": "default"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}
